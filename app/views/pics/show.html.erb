<div class="container-fluid">
  <div id="pic_show" class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel heading pic_image"><%= image_tag @pic.image %></div>
        <div class="panel-body">
          <h1><%= @pic.title %></h1>


          <p><%= @pic.description %></p>


        </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-md-6">
              <p>Pic By : <%= @pic.user.email %></p>
            </div>
            <div class="col-md-6">
              <div class="btn-group pull-right ">
                <%= link_to like_pic_path(@pic), method: :put, class: "btn btn-default" do %>
                    <span class="glyphicon glyphicon-thumbs-up"><%= @pic.get_upvotes.size %></span>
                <% end %>

                <% if user_signed_in? %>
                    <%= link_to 'Edit', edit_pic_path, class: "btn btn-info" %>
                    <%= link_to 'Delete', pic_path, class: "btn btn-danger", :method => :delete, data: {confirm: "Are you sure"} %>
                <% end %>
              </div>
            </div>

          </div>
        </div>

      </div>
    </div>

  </div>


</div>